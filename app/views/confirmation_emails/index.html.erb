<div class="container-fluid no-padding">
  <h1>Sent Emails</h1>
</div>

<div class="col-md-12 col-sm-12">
  <div class="table-responsive">
    <div class="col-md-12 scrollable">
      <table class="table template-table">
        <tr>
          <th class="name">Recipient</th>
          <th class="content">Subject</th>
          <th class="details">Body</th>
        </tr>
        <% @emails.sort_by(&:created_at).reverse.each do |e| %>
          <tr>
            <td class="name"><%= e.recipient %></td>
            <td class="content"><%= e.subject %></td>
            <td class="details"><%= e.content %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>